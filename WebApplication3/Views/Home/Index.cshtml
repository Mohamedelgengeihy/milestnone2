@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="text-center">Login</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(ViewBag.LoginErrorMessage))
            {
                <div class="alert alert-danger">
                    @ViewBag.LoginErrorMessage
                </div>
            }
            <form asp-action="Login" asp-controller="Home" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required />
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
            </form>

            <hr class="my-4" />

            <div class="text-center">
                <p>Don't have an account?</p>
                <form asp-action="Register" asp-controller="Home" method="post">
                    <div class="form-group">
                        <input type="email" id="registerEmail" name="email" class="form-control mt-3" placeholder="Enter your email" required />
                        <input type="password" id="registerPassword" name="password" class="form-control mt-3" placeholder="Enter your password" required />
                        <select id="userType" name="userType" class="form-control mt-3" required>
                            <option value="learner">Learner</option>
                            <option value="instructor">Instructor</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-secondary btn-block mt-3">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>