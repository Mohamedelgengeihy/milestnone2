@model YarabFinal.Models.PersonalizationProfile

@{
    ViewData["Title"] = "Create Personalization Profile";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Create Personalization Profile</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <input type="hidden" asp-for="LearnerId" /> <!-- Hidden LearnerId field -->

                <div class="mb-3">
                    <label asp-for="PreferedContentType" class="form-label">Preferred Content Type</label>
                    <input asp-for="PreferedContentType" class="form-control" />
                    <span asp-validation-for="PreferedContentType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmotionalState" class="form-label">Emotional State</label>
                    <input asp-for="EmotionalState" class="form-control" />
                    <span asp-validation-for="EmotionalState" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PersonalityType" class="form-label">Personality Type</label>
                    <input asp-for="PersonalityType" class="form-control" />
                    <span asp-validation-for="PersonalityType" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save
                    </button>
                    <a asp-controller="Learners" asp-action="Details" asp-route-id="@Model.LearnerId" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to Learner Details
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
