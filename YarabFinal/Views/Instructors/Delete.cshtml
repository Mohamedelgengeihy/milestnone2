@model YarabFinal.Models.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-trash"></i> Confirm Delete</h3>
        </div>
        <div class="card-body">
            <p class="lead">Are you sure you want to delete this Instructor?</p>
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="InstructorId" />
                <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>
