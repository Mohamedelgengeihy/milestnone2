@model YarabFinal.Models.Instructor

@{
    ViewData["Title"] = "Instructor Details";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> Instructor Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Latest Qualification</dt>
                <dd class="col-sm-8">@Model.LatestQualification</dd>

                <dt class="col-sm-4">Expertise Area</dt>
                <dd class="col-sm-8">@Model.ExpertiseArea</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <!-- Edit Button -->
            <a asp-action="Edit" asp-route-id="@Model.InstructorId" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>

            <!-- Back to List -->
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>

            <!-- View Discussion Forums Button -->
            <a asp-controller="DiscussionForums" asp-action="Index" class="btn btn-dark me-2">
                <i class="bi bi-chat-dots"></i> View Discussion Forums
            </a>

            <!-- Create Learning Path Button -->
            <a asp-controller="LearningPaths" asp-action="Create"
               asp-route-LearnerId="1"
               asp-route-ProfileId="1"
               asp-route-CustomContent="Hardcoded Content"
               asp-route-AdaptiveRules="Rule 1, Rule 2"
               class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Create Learning Path
            </a>

            <!-- Delete Button -->
            <form asp-action="Delete" asp-route-id="@Model.InstructorId" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this instructor?');">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
