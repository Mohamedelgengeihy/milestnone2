@model IEnumerable<YarabFinal.Models.Instructor>

@{
    ViewData["Title"] = "Instructors";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-people"></i> Instructors</h3>
            <!-- Create New Button -->
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Latest Qualification</th>
                        <th>Expertise Area</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.LatestQualification</td>
                            <td>@item.ExpertiseArea</td>
                            <td>@item.Email</td>
                            <td>
                                <!-- Edit Button -->
                                <a asp-action="Edit" asp-route-id="@item.InstructorId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <!-- Details Button -->
                                <a asp-action="Details" asp-route-id="@item.InstructorId" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <!-- Delete Button -->
                                <a asp-action="Delete" asp-route-id="@item.InstructorId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
