@model YarabFinal.Models.Instructor

@{
    ViewData["Title"] = "Create Instructor";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-person-plus"></i> Create Instructor</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="mb-3">
                    <label asp-for="InstructorId" class="form-label">Instructor ID</label>
                    <input asp-for="InstructorId" class="form-control" />
                    <span asp-validation-for="InstructorId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="LatestQualification" class="form-label">Latest Qualification</label>
                    <input asp-for="LatestQualification" class="form-control" />
                    <span asp-validation-for="LatestQualification" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ExpertiseArea" class="form-label">Expertise Area</label>
                    <input asp-for="ExpertiseArea" class="form-control" />
                    <span asp-validation-for="ExpertiseArea" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-circle"></i> Save</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left-circle"></i> Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
