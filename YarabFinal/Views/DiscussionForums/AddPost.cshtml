@{
    ViewData["Title"] = "Add Post to Discussion";
}

<h2>Add Post to Discussion</h2>

<form asp-action="AddPost" method="post">
    <!-- Dropdown for Active Discussions -->
    <div class="form-group">
        <label for="forumId">Select Active Discussion</label>
        <select name="forumId" class="form-control" required>
            <option value="">-- Select a Discussion --</option>
            @foreach (var discussion in ViewBag.Discussions)
            {
                <option value="@discussion.Value">@discussion.Text</option>
            }
        </select>
    </div>

    <!-- Post Content -->
    <div class="form-group">
        <label for="postContent">Post Content</label>
        <textarea name="postContent" class="form-control" rows="4" placeholder="Write your post here..." required></textarea>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary mt-3">Submit Post</button>
</form>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to Discussions</a>
</div>
