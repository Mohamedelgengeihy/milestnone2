@model YarabFinal.Models.Learner

@{
    ViewData["Title"] = "Learner Details";
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-person-circle"></i> Learner Details
            </h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-secondary">
                    @Html.DisplayNameFor(model => model.FirstName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt class="col-sm-3 text-secondary">
                    @Html.DisplayNameFor(model => model.LastName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt class="col-sm-3 text-secondary">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Gender)
                </dd>
                <dt class="col-sm-3 text-secondary">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="col-sm-9">
                    @Model.BirthDate?.ToString("yyyy-MM-dd")
                </dd>
                <dt class="col-sm-3 text-secondary">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Country)
                </dd>
                <dt class="col-sm-3 text-secondary">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-3 text-secondary">
                    @Html.DisplayNameFor(model => model.CulturalBackground)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CulturalBackground)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <!-- Edit Button -->
            <a asp-action="Edit" asp-route-id="@Model?.LearnerId" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Edit
            </a>

            <!-- Back to List Button -->
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>

            <!-- View Personalization Profiles Button -->
            <a asp-controller="PersonalizationProfiles" asp-action="Index" asp-route-learnerId="@Model?.LearnerId" class="btn btn-info me-2">
                <i class="bi bi-bar-chart-line"></i> View Personalization Profiles
            </a>

            <!-- Add Personalization Profile Button -->
            <a asp-controller="PersonalizationProfiles" asp-action="Create" asp-route-learnerId="@Model?.LearnerId" class="btn btn-success me-2">
                <i class="bi bi-plus-circle"></i> Add Personalization Profile
            </a>
            <!-- Add this button under the existing buttons in the Learner Details view -->
            <a asp-controller="LearningPaths" asp-action="Index" asp-route-learnerId="@Model.LearnerId" class="btn btn-info me-2">
                <i class="bi bi-map"></i> View Learning Paths
            </a>
            <!-- Add this button under the existing buttons in the Learner Details view -->
            <a asp-controller="LearningPaths" asp-action="ByLearner" asp-route-learnerId="@Model.LearnerId" class="btn btn-info me-2">
                <i class="bi bi-map"></i> View Learning Paths
            </a>

            <!-- Delete Button -->
            <form asp-action="Delete" asp-route-id="@Model?.LearnerId" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this learner?');">
                    <i class="bi bi-trash"></i> Delete Learner
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Add Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
